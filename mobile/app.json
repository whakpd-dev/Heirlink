{
  "expo": {
    "name": "HeirLink",
    "slug": "heirlink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.heirlink.app",
      "buildNumber": "1",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "HeirLink нужен доступ к камере для создания фото и видео.",
        "NSPhotoLibraryUsageDescription": "HeirLink нужен доступ к фото для выбора изображений и создания постов.",
        "NSPhotoLibraryAddUsageDescription": "HeirLink сохраняет медиафайлы в галерею.",
        "NSMicrophoneUsageDescription": "HeirLink нужен доступ к микрофону для записи видео со звуком.",
        "NSFaceIDUsageDescription": "HeirLink использует Face ID для безопасного входа в аккаунт.",
        "CFBundleDevelopmentRegion": "ru"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.heirlink.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_AUDIO",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "heirlink",
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": {
            "newArchEnabled": false,
            "deploymentTarget": "15.1"
          },
          "android": {
            "newArchEnabled": false,
            "minSdkVersion": 24,
            "kotlinVersion": "2.0.21"
          }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "HeirLink нужен доступ к камере для создания фото и видео."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "HeirLink нужен доступ к фото для выбора изображений и создания постов."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "HeirLink нужен доступ к фото для просмотра медиатеки и создания постов.",
          "savePhotosPermission": "HeirLink сохраняет медиафайлы в галерею."
        }
      ],
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "186895f1-25cd-4332-8537-6c87f75267e3"
      }
    },
    "owner": "alim1212"
  }
}
