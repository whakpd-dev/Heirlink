{
  "expo": {
    "name": "HeirLink",
    "slug": "heirlink",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.domainname.heirlinkdev",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "HeirLink нужен доступ к камере для создания фото и видео.",
        "NSPhotoLibraryUsageDescription": "HeirLink нужен доступ к фото для выбора изображений и постов.",
        "NSPhotoLibraryAddUsageDescription": "HeirLink сохраняет фото в галерею.",
        "NSMicrophoneUsageDescription": "HeirLink нужен доступ к микрофону для записи видео со звуком."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.heirlink.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-build-properties",
        {
          "ios": { "newArchEnabled": false }
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "HeirLink нужен доступ к камере для создания фото и видео."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "HeirLink нужен доступ к фото для выбора изображений."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "HeirLink нужен доступ к фото для просмотра медиатеки и создания постов.",
          "savePhotosPermission": "HeirLink сохраняет фото в галерею."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "161f4b63-8e65-4616-a435-344f371f8996"
      }
    },
    "owner": "alimwhak"
  }
}
